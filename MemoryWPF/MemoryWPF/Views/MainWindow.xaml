<Window x:Class="MemoryWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryWPF"
        xmlns:vm="clr-namespace:MemoryWPF.ViewModels"
        xmlns:controls="clr-namespace:MemoryWPF.Controls"
        mc:Ignorable="d"
        Title="Memory" 
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        
        
        <controls:CardDeck Theme="{Binding Theme, Mode=OneWay}" 
                           PairCount="{Binding PairCount, Mode=OneWay}"/>
    </ScrollViewer>
</Window>
