<Window x:Class="MemoryWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryWPF"
        xmlns:vm="clr-namespace:MemoryWPF.ViewModels"
        xmlns:controls="clr-namespace:MemoryWPF.Controls"
        mc:Ignorable="d"
        Title="Memory" 
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10 10 10 0">
            <Label>Name:</Label>
            <TextBox Text="{Binding Path=PlayerName, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,10,0" Width="120"/>
            <Label>Theme:</Label>
            <ComboBox VerticalAlignment="Center" Margin="0 0 10 0" Width="100" ItemsSource="{Binding Themes, Mode=OneWay}" 
                      SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"/>
            <Label>Number of pairs:</Label>
            <ComboBox VerticalAlignment="Center" Margin="0 0 10 0" Width="50" ItemsSource="{Binding PairCounts, Mode=TwoWay}"
                      SelectedItem="{Binding SelectedPairCount, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10 10 10 0">
            <Button Content="Start!" Width="70" Height="21" Margin="20 0 0 0"
                    Command="{Binding StartCommand}"/>
            <Button Content="Scores" Width="70" Height="21" Margin="20 0 0 0"
                    Command="{Binding ScoreCommand}"/>
        </StackPanel>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="2">
            <controls:CardDeck Theme="{Binding CurrentTheme, Mode=OneWay}" 
                               PairCount="{Binding CurrentPairCount, Mode=OneWay}"/>
        </ScrollViewer>

        <ItemsControl Grid.Row="3" Visibility="{Binding ShowScores, Mode=OneWay, Converter={StaticResource BoolToVis}}" 
                      ItemsSource="{Binding RankList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=PlayerName}"/>
                            <TextBlock Text="{Binding Path=Time, Converter={StaticResource TimeSpanToSecondsConverter}}"/>
                            <TextBlock Text="{Binding Path=NumberOfPairsOpened}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
