<Border x:Class="MemoryWPF.Controls.GameFinishedMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryWPF.Controls"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="50" Width="200">
    <Grid Background="{Binding Path=Theme, Mode=OneWay, Converter={StaticResource ThemeToColorConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="{Binding Path=Message, Mode=OneWay}"
                   Grid.Row="1" Grid.Column="1"
                   Foreground="White" FontSize="20" FontWeight="Bold"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Border>
